<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:endColor="@color/splash_background_color_gradient_other"
                android:gradientRadius="100%"
                android:startColor="@color/splash_background_color_gradient"
                android:type="radial" />
        </shape>
    </item>

    <item
        android:width="@dimen/splash_screen_icon_width_height"
        android:height="@dimen/splash_screen_icon_width_height"
        android:drawable="@drawable/pokeball_app_icon"
        android:gravity="center" />
</layer-list>