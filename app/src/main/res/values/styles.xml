<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/secondary_color</item>
        <item name="android:tint">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_color_primary</item>
    </style>

    <style name="ToolBar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@color/secondary_color</item>
        <item name="android:tint">@color/text_color_primary</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView.Bottom" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">20%</item>
        <item name="cornerSizeBottomRight">20%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView.Top" parent="">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">15%</item>
        <item name="cornerSizeTopRight">15%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CardView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="text_view_default">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="text_view_medium" parent="text_view_default">
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="text_view_extra_bold" parent="text_view_default">
        <item name="android:fontFamily">@font/mulish_extra_bold</item>
    </style>

    <style name="text_view_pokemon_solid" parent="text_view_default">
        <item name="android:fontFamily">@font/pokemon_solid</item>
        <item name="android:letterSpacing">@dimen/text_spacing</item>
    </style>

    <style name="text_view_pokemon_font" parent="text_view_pokemon_solid">
        <item name="android:textSize">@dimen/text_header_banner</item>
    </style>

    <style name="text_view_banner" parent="text_view_extra_bold">
        <item name="android:textSize">@dimen/text_header_banner</item>
    </style>

    <style name="text_view_banner_pokemon_font" parent="text_view_pokemon_solid">
        <item name="android:textSize">@dimen/text_header_banner</item>
    </style>

    <style name="text_view_subtitle" parent="text_view_medium">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>